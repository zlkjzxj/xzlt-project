<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.zlkj.business.dao.EnterpriseMapper">
    <select id="getListBySearchVar" resultType="com.zlkj.business.entity.Enterprise"
            parameterType="com.zlkj.business.dto.EnterpriseDto">
        SELECT e.* FROM biz_enterprise e
        <where>
            <if test="searchVal !=null and searchVal!='' ">
                CONCAT(e.name, e.`manager`,e.phone) LIKE CONCAT('%', #{searchVal}, '%')
            </if>
        </where>

    </select>
</mapper>